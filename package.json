{
  "name": "project",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "bin": "node ./dist/src/bin.js",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=DEVELOPMENT nest start --watch",
    "start:debug": "cross-env NODE_ENV=DEVELOPMENT nest start --debug --watch",
    "exec": "node --inspect -r ts-node/register -r tsconfig-paths/register ./src/main.ts",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=UNIT_TEST jest --maxWorkers=1",
    "test:integration": "cross-env NODE_ENV=INTEGRATION_TEST jest --maxWorkers=1 --config jest-integration.json",
    "test:watch": "jest --watch",
    "test:cov": "cross-env NODE_ENV=INTEGRATION_TEST jest --coverage --config jest-coverage.json",
    "test:debug": "node --inspect -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=E2E_TEST jest --maxWorkers=1 --config ./test/jest-e2e.json",
    "user:migration:generate": "dotenv -c -- npx typeorm-ts-node-esm migration:generate ./src/domain/user/user-infrastructure/database/migrations/user -d ./src/domain/user/user-infrastructure/database/config/typeorm.config.ts",
    "user:migration:run": "dotenv -c -- npx typeorm-ts-node-esm migration:run -d ./src/domain/user/user-infrastructure/database/config/typeorm.config.ts",
    "user:migration:revert": "dotenv -c -- npx typeorm-ts-node-esm migration:revert -d ./src/domain/user/user-infrastructure/database/config/typeorm.config.ts",
    "seed:user": "npm run bin seed:user"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^3.4.0",
    "@grpc/grpc-js": "^1.6.6",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/graphql": "^10.0.8",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/mongoose": "^9.0.3",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/terminus": "^9.1.4",
    "@nestjs/typeorm": "^9.0.0",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "bull": "^4.8.1",
    "cache-manager": "^5.1.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "joi": "^17.6.0",
    "nest-commander": "^3.3.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.2.1",
    "@types/amqplib": "^0.10.1",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^4.10.0",
    "@types/cache-manager": "^4.0.2",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.18",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.0.0",
    "plato": "^1.7.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@shared-kernel/(.*)$": "<rootDir>/../src/shared-kernel/$1",
      "^@infrastructure/(.*)$": "<rootDir>/../src/infrastructure/$1",
      "^@presentation/(.*)$": "<rootDir>/../src/presentation/$1",
      "^@user-contract/(.*)$": "<rootDir>/../src/bounded-context/user/user-contract/$1"
    }
  }
}
